{
  "compilerOptions": {
    "outDir": "./lib/types",
    "target":"es2020",
    "lib": ["es2020"],
    "module": "es2020",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true
  },
  "include":[
    "src/**/*.ts",
  ],
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc",
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "commonjs"
    }
  }
}
